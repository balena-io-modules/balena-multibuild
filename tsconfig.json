{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"outDir": "build",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"pretty": true,
		"removeComments": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"lib/**/*.ts",
		"typings/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"test"
	]
}
